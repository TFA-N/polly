<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

<persistence-unit name="polly" transaction-type="RESOURCE_LOCAL">

    <!-- Internal settings -->
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <description>Auto generated persistence.xml file</description>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>

    <!-- plugin jar file references -->
    <jar-file>file:../plugins/polly.logging.jar</jar-file>
    <jar-file>file:../plugins/polly.reminds.jar</jar-file>
    <jar-file>file:../plugins/polly.memes.jar</jar-file>
    <jar-file>file:../plugins/polly.core.jar</jar-file>
    <jar-file>file:../plugins/polly.porat.jar</jar-file>
    <jar-file>file:../plugins/polly.rx.jar</jar-file>
    <jar-file>file:../plugins/polly.linkexpander.jar</jar-file>

    <!-- plugin entity classes -->
    <class>polly.core.users.User</class>
    <class>polly.core.users.Attribute</class>
    <class>polly.core.roles.Permission</class>
    <class>polly.core.roles.Role</class>
    <class>entities.TopicEntity</class>
    <class>entities.LogEntry</class>
    <class>polly.memes.MemeEntity</class>
    <class>entities.RemindEntity</class>
    <class>polly.rx.entities.TrainEntity</class>
    <class>polly.rx.entities.TrainEntityV2</class>
    <class>polly.rx.entities.BattleReport</class>
    <class>polly.rx.entities.BattleReportShip</class>
    <class>polly.rx.entities.BattleDrop</class>
    <class>polly.rx.entities.FleetScan</class>
    <class>polly.rx.entities.FleetScanHistoryEntry</class>
    <class>polly.rx.entities.FleetScanShip</class>

    <!-- property settings -->
    <properties>
        <property name="javax.persistence.jdbc.password" value="polly123"/>
        <property name="javax.persistence.jdbc.user" value="polly"/>
        <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:./db/polly"/>
        <property name="eclipselink.ddl-generation" value="create-tables"/>
        <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        <property name="eclipselink.logging.level" value="OFF"/>
    </properties>
</persistence-unit>
</persistence>